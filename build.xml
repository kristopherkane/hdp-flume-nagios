<project name="hdp-flume-nagios-build"  default="1" basedir="." >

    <description>
        Build the Flume Nagios plugin
    </description>

    <property name="dist"  location="dist"/>
    <target name="1">
        <echo>Starting the build</echo>
        <echo>Starting archive</echo>
        <mkdir dir="${build}"/>
        <tar destfile="${dist}/puppet-configs.tar" basedir="ambari-puppet-modules"/>

        <echo>Finishing the build...</echo>
    </target>

</project>